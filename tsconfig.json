{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "target": "es5",
        "outDir": "./dist/js"
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}